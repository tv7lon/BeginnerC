#include <stdio.h>
#include <stdlib.h>

int main()
{
    int i, j, size;
    printf("Enter size: ");
    scanf("%d", &size);

    if(size>=20){
        printf("\nYou didnt enter a number between 1 and 20.");
    }else{
        for(i = 0; i < size; i++){
                for(j = 0; j< i+1; j++){
                    if(i< 10){
                        printf("%3d ", i+1);
                    }else{
                    printf(" %d ", i+1);
                    }
                }
            printf("\n");
        }
    }
    return 0;
}
