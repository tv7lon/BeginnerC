#include <stdio.h>
#include <math.h>

double getRounded(double amount);

int main(){

    double amountIn;
    scanf("%lf", &amountIn); //ENSURE YOU USE %lf for SCANF AND DOUBLES
    printf("Your amount was %f\nThe rounded amount is: %.2f", amountIn, getRounded(amountIn)/10);

    return 0;
    }

    double getRounded(double amount){
        amount *= 10;
        if(amount>0){
            printf("Positive value\n");
            float flooredVal = floor(amount);
            printf("Floored value %f\n", flooredVal);
            if (amount>= flooredVal+0.5)
            {
             
                return flooredVal +0.5;
            }else{
                return flooredVal;
            }
             
        }else{
            printf("Negative value\n");
            float ceiledVal = ceil(amount);
              printf("Ceiled value %f\n", ceiledVal);
            if (amount <= ceiledVal - 0.5)
            {
                return ceiledVal-0.5;
            }else{
                return ceiledVal;
            }
            
        }
    }

